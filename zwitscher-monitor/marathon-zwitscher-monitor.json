{
  "id": "zwitscher-monitor",

  "instances": 1,
  "cpus": 0.2,
  "mem": 512,
  "acceptedResourceRoles": ["slave_public"],
  "cmd": "java -Xmx256m -Dserver.port=$PORT0 -Deureka.instance.ipAddress=$HOST  -jar /opt/zwitscher-monitor/zwitscher-monitor.jar",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "toplac-docker-playground.bintray.io/zwitscher/zwitscher-monitor:latest",
      "network": "BRIDGE",
      "portMappings": [
        { "hostPort": 0, "containerPort": 0, "protocol": "tcp"}
      ]
    }
  },

  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/admin/health",
      "intervalSeconds": 10,
      "portIndex": 0,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
    ],

  "dependencies" : [ "zwitscher-config", "zwitscher-eureka" ],

  "env": {
    "eureka.host": "zwitscher-eureka.marathon.mesos"
  }

}
